<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ViaEmailShareActivity" 
    android:weightSum="4"
    android:background="@drawable/mailpaperbackground"
    android:padding="20dp"
    android:paddingTop="20dp">

	<LinearLayout 
	    android:layout_weight="1"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal">

		<TextView
		    android:id="@+id/textView1"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="Email: "
		    android:textSize="20dp" />

		<EditText
		    android:id="@+id/editText_EmailActivity_MailAdd"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:ems="10"
		    android:inputType="textEmailAddress"
		    android:background="@android:color/transparent"
		    android:hint="Mail Address" >

		</EditText>
	    
	</LinearLayout>
	
	<LinearLayout 
	    android:layout_weight="1"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal">

		<TextView
		    android:id="@+id/textView1"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="Subject: "
		    android:textSize="20dp"  />

		<EditText
		    android:id="@+id/editText_EmailActivity_Subject"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:ems="10"
		    android:inputType="text"
		    android:background="@android:color/transparent"
		    android:hint="Subject" >

		    <requestFocus />
		</EditText>
	    
	</LinearLayout>
	
	<LinearLayout 
	    android:layout_weight="1"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical">

		<TextView
		    android:id="@+id/textView1"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="Email Body: " 
		    android:textSize="20dp" />

		<EditText
		    android:id="@+id/editText_EmailActivity_Body"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:ems="10" 
		    android:inputType="textMultiLine"
		    android:background="@android:color/transparent">

		    <requestFocus />
		</EditText>
	    
	</LinearLayout>
	
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_gravity="bottom"
	    android:layout_weight="1"
	    android:orientation="vertical" >

		<ImageButton
		    android:id="@+id/imageButton_EmailActivity_Send"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center|bottom"
		    android:background="@null"
		    android:src="@drawable/emailsendbutton_custom" />
	    
	</LinearLayout>
	
</LinearLayout>
