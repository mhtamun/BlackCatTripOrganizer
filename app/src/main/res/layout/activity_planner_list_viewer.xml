<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PlannerListViewerActivity" 
    android:background="@drawable/plannerbackground">
    
    

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView_Planner_TripName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" 
            android:textSize="25dp"
            android:layout_gravity="center"/>

    </LinearLayout>


    <LinearLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:background="@drawable/vintagebuttonall"
        android:padding="40dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Destination: " 
                android:textSize="15dp"/>
            
            <TextView
                android:id="@+id/textView_PlannerViewer_CityName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" 
                android:textSize="15dp"/>            
            
       </LinearLayout>
       
        
       <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Starting Date: " 
                android:textSize="15dp"/>
            
            <TextView
                android:id="@+id/textView_PlannerViewer_StartingDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" 
                android:textSize="15dp"/>
           
       </LinearLayout>
       <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            
           	<TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Travel By: " 
                android:textSize="15dp"/>
                       
         	<TextView
                android:id="@+id/textView_PlannerViewer_TravleBy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" 
                android:textSize="15dp"/>       
           
       </LinearLayout>
       <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
         	
           	<TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Places to stay: " 
                android:textSize="15dp"/>
           
            <TextView
                android:id="@+id/textView_PlannerViewer_PlacesToStay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" 
                android:textSize="15dp"/>
            
       </LinearLayout>
       
      	<LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            
      	    <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Things to do: " 
                android:textSize="15dp"/>
      	    
      	   	<TextView
                android:id="@+id/textView_PlannerViewer_ThingsToDo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" 
                android:textSize="15dp"/>
      	  
       </LinearLayout>
       

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:weightSum="4">

        <ImageButton
            android:id="@+id/imageButton_PlannerViwer_CreateTracker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@null"
            android:src="@drawable/sharebutton_custom" />  

        <ImageButton
            android:id="@+id/imageButton_Planner_DeleteButton"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/deletebutton_custom" />

    </LinearLayout>
    



</LinearLayout>
