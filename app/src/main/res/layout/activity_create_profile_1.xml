<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/linearlayout_creteProfile1"
    android:background="@drawable/trackerbackground"
    android:padding="20dp"
    android:weightSum="3">
    
    <LinearLayout 
        
		android:layout_weight="1"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical">
	    
	        
	    <TextView
	        android:id="@+id/textView_tripName"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Enter A Trip Name"
	        android:textSize="20dp"/>
	
	    <EditText
	        android:id="@+id/editText_tripname"
	        android:layout_width="match_parent"
	        android:layout_height="50dp"
			android:ems="10" 
	        android:inputType="textPersonName"
	         >
	        <requestFocus />
	    </EditText>
        
        
    </LinearLayout>
    
    <LinearLayout
		android:layout_weight="1"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="20dp"
	    android:orientation="vertical">
	    
	    <TextView
	        android:id="@+id/textView_reason"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Reason For Journey:"
	        android:textSize="20dp"/>
	
	    <RadioGroup
	        android:id="@+id/radio_reason"
	        android:weightSum="3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" >
	
		    <RadioButton
		        android:id="@+id/radioButton_personal"
		        android:layout_weight="1"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Personal"
		        android:textSize="20dp" />
		
		    <RadioButton
		        android:id="@+id/radioButton_Bussiness"
		        android:layout_weight="1"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Bussiness"
		        android:textSize="20dp"  />
		
		    <RadioButton
		        android:id="@+id/radioButton_Travel"
		        android:layout_weight="1"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
	        	android:text="Travel"
		        android:textSize="20dp" />
		</RadioGroup>    

    </LinearLayout>

    
    <LinearLayout 
        
		android:layout_weight="1"
		android:layout_gravity="bottom"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical">
	    <ImageButton
	        android:id="@+id/imageButton_continue"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
			android:background="@null"
			android:layout_gravity="center"
	        android:src="@drawable/continuebutton_custom" />
	
	    <ImageButton
	        android:id="@+id/imageButton_cancel"	        
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dp"
			android:background="@null"
			android:layout_gravity="center"
	        android:src="@drawable/cancelbutton_custom" />
    </LinearLayout>

</LinearLayout>
