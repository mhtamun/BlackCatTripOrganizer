<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:id="@+id/LinearLayout_AddPreferences"
    tools:context=".AddAditionalPreferencesActivity" 
    android:background="@drawable/trackerbackground"
    android:weightSum="5">

    <TextView
        android:layout_weight="0.5"
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Places to stay"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_weight="1.5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <CheckBox
                android:id="@+id/checkBox_AddPreference_BnB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bed and \nBreakfasts" />

            <CheckBox
                android:id="@+id/checkBox_AddPreference_Camp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Campgrounds" />

            <CheckBox
                android:id="@+id/checkBox_AddPreference_HnM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hotels and \nMotels" />

        </LinearLayout>
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            
            <CheckBox
                android:id="@+id/checkBox_AddPreference_CnC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cabins and \nCottages" />

            <CheckBox
                android:id="@+id/checkBox_AddPreference_RnL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resorts and \nLodges" />

            <CheckBox
                android:id="@+id/checkBox_AddPreference_Specialty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Specialty" />            
        </LinearLayout>       

    </LinearLayout>
    
    <TextView
        android:layout_weight="0.5"
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Things to do"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_weight="1.5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <CheckBox
                android:id="@+id/checkBox_AddPreference_AnC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arts and \nCulture" />

            <CheckBox
                android:id="@+id/checkBox_AddPreference_LocalFood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Local Foods" />
            
            <CheckBox
                android:id="@+id/checkBox_AddPreference_NightLife"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Night Life" />

        </LinearLayout>
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            
            <CheckBox
                android:id="@+id/checkBox_AddPreference_EnA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Entertainment and \nAttractions" />

            <CheckBox
                android:id="@+id/checkBox_AddPreference_Outdoorfun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Outdoor Fun" />
            
            <CheckBox
                android:id="@+id/checkBox_AddPreference_Shopping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shopping" /> 
          
        </LinearLayout> 
                
    </LinearLayout>
    

   	<ImageButton
	    android:layout_weight="1"
	    android:id="@+id/imageButton_AddPreference_CreateNEw"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center"
	    android:background="@null"
	    android:src="@drawable/addnewtripbutton_custom" />

</LinearLayout>
