<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TrackerMenuActivity" 
    android:background="@drawable/trackerbackground"
    android:weightSum="5">

    <ImageButton
        android:id="@+id/imageButton_budget"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		    android:background="@null"
		    android:layout_gravity="center"
        android:src="@drawable/budgettrackerbutton_custom" />

    <!--  <ImageButton
        android:id="@+id/imageButton_transit"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:background="@null"
		android:layout_gravity="center"
        android:src="@drawable/transporttrackerbutton_custom" />-->

    <ImageButton
        android:id="@+id/imageButton_place"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:background="@null"
		android:layout_gravity="center"
        android:src="@drawable/placetrackerbutton_custom" />

    <ImageButton
        android:id="@+id/imageButton_showBudget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
		android:background="@null"
		android:layout_gravity="center"
        android:src="@drawable/showbudgetbutton_custom" />

    <ImageButton
        android:id="@+id/imageButton_closeProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
		android:background="@null"
		android:layout_gravity="center"
        android:src="@drawable/closeprofilebutton_custom" />

</LinearLayout>
